<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
    google.load("visualization", "1", {packages:["corechart"]});
</script>

<% content_for :title do %>Solutions Center Dashboard<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock" style="background-color:#96c23d"></div>
      <i class="fa fa-clock-o icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="welcome" data-view="Text" style="background-color: #E67125;" data-title="Daily Briefing" data-text="Check your schedule for Christmas and Deadline changes.</br>Release this morning. Known issues will be updated soon!</br>Service and Support meeting tomorrow at 11:15." data-moreinfo="Let a manager know if something needs to be added!"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="ticketsAnswered" data-view="List" style="background-color: #A154A1;" data-unordered="true" data-title="Tickets" data-moreinfo="Total Tickets Answered Yesterday"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="chatsAnswered" style="background-color: #678c93;" data-view="List" data-unordered="true" data-title="Chats" data-moreinfo="Total Chats Answered Yesterday"></div>
    </li>

    <li data-row="5" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="todaysCalls" style="background-color:#65b193;" data-view="List" data-unordered="true" data-title="Today's Scheduled Calls" data-moreinfo=""></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions" data-view="Comments" style="background-color:#00B7CE;" data-moreinfo="Recent Tweets tagged with #CommonApp"></div>
      <i class="fa fa-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ticketTotals" data-view="Number" style="background-color:#034F9B;" data-title="Yesterday's Total Tickets" style="background-color:#96bf48;"></div>
      <i class="fa fa-ticket icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="totalChats" data-view="Number" style="background-color:#981a36;" data-title="Yesterday's Total Chats" style="background-color:#96bf48;"></div>
      <i class="fa fa-commenting-o icon-background"></i>
    </li >

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="mychart" data-view="GoogleColumn"  style="background-color:#edebe6;" data-title="Category Trends: Last 4 Weeks" data-colors="#8B0707,#E67300"></div>
    </li>

  </ul>
</div>
